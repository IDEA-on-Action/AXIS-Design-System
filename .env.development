# =============================================================================
# AX Discovery Portal - Development Environment
# =============================================================================
# 개발 환경 설정 (로컬 개발용)

APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# CORS (개발 환경 - 로컬 주소 허용)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://127.0.0.1:3000

# Security (개발 환경용 - 프로덕션에서 변경 필수!)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database (로컬 PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ax_discovery_dev

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxx
AGENT_MODEL=claude-sonnet-4-20250514

# OpenAI (임베딩용)
OPENAI_API_KEY=sk-xxx
EMBEDDING_MODEL=text-embedding-3-small

# Confluence (개발용 테스트 스페이스)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_API_TOKEN=
CONFLUENCE_USER_EMAIL=
CONFLUENCE_SPACE_KEY=AXBD-DEV

# Teams/Slack (개발 환경에서는 비활성화)
TEAMS_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
