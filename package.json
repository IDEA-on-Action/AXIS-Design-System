{
  "name": "axis-design-system",
  "version": "0.7.0",
  "private": true,
  "description": "AXIS Design System - React 컴포넌트 라이브러리 및 디자인 토큰",
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.6",
      "@types/react-dom": "^19.0.2"
    }
  },
  "scripts": {
    "dev": "pnpm --filter @ax/web dev",
    "dev:web": "pnpm --filter @ax/web dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @ax/web build",
    "build:registry": "node scripts/build-registry.mjs",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "pnpm -r clean && rm -rf node_modules .turbo",
    "test": "turbo run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.10.5",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}