# =============================================================================
# AX Discovery Portal - Staging Environment
# =============================================================================
# 스테이징 환경 설정 (테스트/QA 용)

APP_ENV=staging
DEBUG=false
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS (스테이징 환경 - Cloudflare Pages 프리뷰)
CORS_ORIGINS=https://ax-discovery-portal-preview.pages.dev,https://staging.ax-discovery-portal.pages.dev

# Security
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database (Render Staging)
DATABASE_URL=${DATABASE_URL}

# Anthropic API
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
AGENT_MODEL=claude-sonnet-4-20250514

# OpenAI
OPENAI_API_KEY=${OPENAI_API_KEY}
EMBEDDING_MODEL=text-embedding-3-small

# Cloudflare (Staging)
CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_API_TOKEN}
D1_DATABASE_ID=${D1_DATABASE_ID}

# Vectorize
VECTORIZE_INDEX_NAME=ax-discovery-entities-staging
VECTORIZE_SIGNAL_INDEX=ax-discovery-signals-staging
VECTORIZE_ENTITY_INDEX=ax-discovery-entities-staging

# Confluence (스테이징 스페이스)
CONFLUENCE_BASE_URL=${CONFLUENCE_BASE_URL}
CONFLUENCE_API_TOKEN=${CONFLUENCE_API_TOKEN}
CONFLUENCE_USER_EMAIL=${CONFLUENCE_USER_EMAIL}
CONFLUENCE_SPACE_KEY=AXBD-STG

# Teams/Slack (스테이징 채널)
TEAMS_WEBHOOK_URL=${TEAMS_WEBHOOK_URL}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
