{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Signal",
  "description": "사업기회 신호(Signal) - AX BD Discovery Portal",
  "type": "object",
  "required": ["signal_id", "title", "source", "channel", "play_id", "pain", "created_at"],
  "properties": {
    "signal_id": {
      "type": "string",
      "pattern": "^SIG-\\d{4}-\\d{3,}$",
      "description": "Signal 고유 ID (예: SIG-2025-001)"
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "description": "Signal 제목"
    },
    "source": {
      "type": "string",
      "enum": ["KT", "그룹사", "대외"],
      "description": "Signal 원천 (3원천)"
    },
    "channel": {
      "type": "string",
      "enum": ["데스크리서치", "자사활동", "영업PM", "인바운드", "아웃바운드"],
      "description": "Signal 채널 (5채널)"
    },
    "play_id": {
      "type": "string",
      "description": "관련 Play ID"
    },
    "customer_segment": {
      "type": "string",
      "description": "고객 세그먼트"
    },
    "pain": {
      "type": "string",
      "description": "고객 Pain Point"
    },
    "proposed_value": {
      "type": "string",
      "description": "제안 가치"
    },
    "kpi_hypothesis": {
      "type": "array",
      "items": {"type": "string"},
      "description": "KPI 가설 (예: AHT 15%↓)"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "title", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["link", "doc", "ticket", "meeting_note", "dataset", "image"]
          },
          "title": {"type": "string"},
          "url": {"type": "string"},
          "note": {"type": "string"}
        }
      },
      "description": "근거 자료 목록"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "키워드 태그"
    },
    "status": {
      "type": "string",
      "enum": ["NEW", "SCORING", "SCORED", "BRIEF_CREATED", "VALIDATED", "PILOT_READY", "ARCHIVED"],
      "default": "NEW",
      "description": "Signal 상태"
    },
    "owner": {
      "type": "string",
      "description": "담당자"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "신뢰도 (0-1)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "생성 일시"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "수정 일시"
    }
  },
  "additionalProperties": false
}
