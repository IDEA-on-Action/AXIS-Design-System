{
  "setting_sources": ["project", "user"],
  "allowed_tools": ["mcp", "bash", "files"],
  "permission_mode": "ask",
  "project_name": "axis-design-system",
  "project_description": "AXIS Design System - React 컴포넌트 라이브러리 및 디자인 토큰",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm type-check",
            "on_failure": "warn"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit(packages/axis-*/src/**/*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm type-check",
            "on_failure": "warn"
          }
        ]
      },
      {
        "matcher": "Edit(**/registry.json)",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm build:registry",
            "on_failure": "warn"
          }
        ]
      }
    ]
  },
  "customCommands": {
    "status": {
      "command": "git status && pnpm type-check",
      "description": "Git 상태 및 타입 체크"
    },
    "components": {
      "command": "npx @axis-ds/cli list",
      "description": "설치된 컴포넌트 목록"
    },
    "registry": {
      "command": "pnpm build:registry",
      "description": "레지스트리 빌드"
    },
    "clean": {
      "command": "pnpm clean",
      "description": "빌드 캐시 정리"
    }
  }
}
