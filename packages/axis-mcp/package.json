{
  "name": "@axis-ds/mcp",
  "version": "1.1.0",
  "type": "module",
  "description": "AXIS Design System - MCP Server for AI-assisted component discovery",
  "bin": {
    "axis-mcp": "./dist/index.js"
  },
  "main": "dist/index.js",
  "sideEffects": false,
  "files": [
    "dist",
    "src/registry/data"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean && npm run copy-data",
    "copy-data": "node -e \"const fs=require('fs');fs.cpSync('src/registry/data','dist/registry/data',{recursive:true})\"",
    "dev": "tsup src/index.ts --format esm --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "design-system",
    "axis"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtandaction/axis.git",
    "directory": "packages/axis-mcp"
  },
  "homepage": "https://axis.minu.best"
}
