{
  "name": "axis-cli",
  "version": "0.1.0",
  "type": "module",
  "description": "AXIS Design System - CLI for adding components (shadcn compatible)",
  "bin": {
    "axis-cli": "./dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/monet.ts src/v0.ts --format esm --dts",
    "dev": "tsup src/index.ts src/monet.ts src/v0.ts --format esm --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.0",
    "ora": "^8.0.0",
    "prompts": "^2.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^22.0.0",
    "@types/prompts": "^2.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "cli",
    "design-system",
    "axis",
    "shadcn",
    "components"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtandaction/axis.git",
    "directory": "packages/axis-cli"
  },
  "homepage": "https://axis.minu.best"
}
