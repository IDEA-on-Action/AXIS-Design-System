{
  "name": "@axis-ds/tokens",
  "version": "1.0.0",
  "description": "AXIS Design System - Design Tokens (CSS Variables + JSON)",
  "main": "dist/js/tokens.js",
  "module": "dist/js/tokens.mjs",
  "types": "dist/js/tokens.d.ts",
  "exports": {
    ".": {
      "types": "./dist/js/tokens.d.ts",
      "import": "./dist/js/tokens.mjs",
      "require": "./dist/js/tokens.js"
    },
    "./css": "./dist/css/variables.css",
    "./css/shadcn": "./dist/css/shadcn-compat.css",
    "./tailwind": {
      "types": "./dist/tailwind-preset.d.ts",
      "import": "./dist/tailwind-preset.mjs",
      "require": "./dist/tailwind-preset.js"
    },
    "./json": "./dist/json/tokens.json"
  },
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node build-tokens.mjs && tsup src/tailwind-preset.ts --format cjs,esm --dts --out-dir dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "style-dictionary": "^4.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "keywords": [
    "design-tokens",
    "css-variables",
    "design-system",
    "axis"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtandaction/axis.git",
    "directory": "packages/axis-tokens"
  },
  "homepage": "https://axis.minu.best"
}
