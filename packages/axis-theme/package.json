{
  "name": "@axis-ds/theme",
  "version": "1.1.0",
  "description": "AXIS Design System - Theme Provider & Dark Mode",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --tsconfig tsconfig.json",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --tsconfig tsconfig.json",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@axis-ds/tokens": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/minimatch": "^5.1.2",
    "@types/react": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "react": "^18.2.0",
    "react-dom": "18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "design-system",
    "axis"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtandaction/axis.git",
    "directory": "packages/axis-theme"
  },
  "homepage": "https://axis.minu.best"
}
