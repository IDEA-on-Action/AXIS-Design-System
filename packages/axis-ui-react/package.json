{
  "name": "@axis-ds/ui-react",
  "version": "0.1.0",
  "description": "AXIS Design System - Core React UI Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/button.mjs",
      "require": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./input": {
      "import": "./dist/input.mjs",
      "require": "./dist/input.js",
      "types": "./dist/input.d.ts"
    },
    "./card": {
      "import": "./dist/card.mjs",
      "require": "./dist/card.js",
      "types": "./dist/card.d.ts"
    },
    "./dialog": {
      "import": "./dist/dialog.mjs",
      "require": "./dist/dialog.js",
      "types": "./dist/dialog.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/*/index.tsx --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@axis-ds/tokens": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "axis",
    "shadcn"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtandaction/axis.git",
    "directory": "packages/axis-ui-react"
  },
  "homepage": "https://axis.minu.best"
}
