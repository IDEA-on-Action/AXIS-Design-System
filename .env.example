# =============================================================================
# AX Discovery Portal - Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Anthropic API
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxx

# Agent 모델 설정
AGENT_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Confluence
# -----------------------------------------------------------------------------
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_API_TOKEN=your-api-token
CONFLUENCE_USER_EMAIL=your-email@example.com
CONFLUENCE_SPACE_KEY=AXBD

# Confluence 페이지 ID (Confluence에서 확인)
# 예: https://your-domain.atlassian.net/wiki/spaces/AB/pages/123456789
# → CONFLUENCE_PLAY_DB_PAGE_ID=123456789
#
# 페이지 구조:
# Project TODO (720932) ─────────────── 스프린트 단위 진행현황
#     ├── EXT_Desk_D01 ToDo List (753719)  ── Play별 세부 작업
#     └── ...
# Play DB (720899) ──────────────────── Play 진행현황 테이블 + 하위 페이지 링크
# Action Log (786433) ───────────────── 작업 이력 기록

# Action Log 페이지: Activity 기록을 추가할 페이지 ID
CONFLUENCE_ACTION_LOG_PAGE_ID=786433

# Play DB 페이지: Play 진행현황 테이블이 있는 페이지 ID (하위 페이지 링크 포함)
CONFLUENCE_PLAY_DB_PAGE_ID=720899

# 프로젝트 현황 페이지: 프로젝트 개요 및 진행 상황
CONFLUENCE_PROJECT_STATUS_PAGE_ID=753665

# Project TODO 페이지: 스프린트 진행현황, Play ToDo 하위 페이지의 부모
# (/ax:todo --sync 사용 시 이 페이지에 동기화)
CONFLUENCE_TODO_PAGE_ID=720932

# Play별 ToDo 하위 페이지 (선택사항, 자동 생성됨)
# CONFLUENCE_EXT_DESK_D01_TODO_PAGE_ID=753719

# (구버전 - 사용 안 함)
CONFLUENCE_PLAY_DB_ID=
CONFLUENCE_ACTION_LOG_DB_ID=

# -----------------------------------------------------------------------------
# Database - Cloudflare D1 (SQLite)
# -----------------------------------------------------------------------------
# D1 데이터베이스 생성 후 설정:
# npx wrangler d1 create ax-discovery-db
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
D1_DATABASE_ID=your-database-id

# -----------------------------------------------------------------------------
# Vector Search - Cloudflare Vectorize
# -----------------------------------------------------------------------------
# Vectorize 인덱스 생성 후 설정:
# npx wrangler vectorize create ax-discovery-entities --dimensions=1536 --metric=cosine
VECTORIZE_INDEX_NAME=ax-discovery-entities

# -----------------------------------------------------------------------------
# Embeddings - OpenAI API
# -----------------------------------------------------------------------------
# OpenAI API 키 (임베딩 생성용)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx

# 임베딩 모델 (기본값: text-embedding-3-small)
# 옵션: text-embedding-3-small (1536차원), text-embedding-3-large (3072차원)
EMBEDDING_MODEL=text-embedding-3-small

# (Legacy - PostgreSQL, 현재 미사용)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ax_discovery

# -----------------------------------------------------------------------------
# GitHub (Project 동기화용)
# -----------------------------------------------------------------------------
# Organization 및 Repository 설정
GITHUB_ORG=IDEA-on-Action
GITHUB_REPO=AXIS-Design-System
GITHUB_PROJECT_NUMBER=4

# GitHub CLI 인증은 gh auth login으로 별도 설정
# https://cli.github.com/manual/gh_auth_login

# -----------------------------------------------------------------------------
# Slack (알림용)
# -----------------------------------------------------------------------------
# Slack Incoming Webhook URL
# 설정 가이드: .claude/skills/ax-wrap-up/SKILL.md 참조
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#dev-notifications

# -----------------------------------------------------------------------------
# Teams Integration (Optional)
# -----------------------------------------------------------------------------
TEAMS_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Monitoring - Sentry (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN (비어있으면 비활성화)
# https://sentry.io에서 프로젝트 생성 후 DSN 복사
SENTRY_DSN=

# 성능 모니터링 샘플링 비율 (0.0 ~ 1.0, 기본값: 0.2 = 20%)
# 프로덕션: 0.1~0.2 권장, 개발: 1.0 (전체 수집)
SENTRY_TRACES_SAMPLE_RATE=0.2

# 프로파일링 샘플링 비율 (0.0 ~ 1.0, 기본값: 0.1 = 10%)
# 프로덕션: 0.05~0.1 권장, 개발: 비활성화
SENTRY_PROFILES_SAMPLE_RATE=0.1

# 앱 버전 (Sentry 릴리스 태그용)
APP_VERSION=0.6.0

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# JWT Secret (for API authentication)
JWT_SECRET=your-secret-key

# Approval timeout (seconds)
APPROVAL_TIMEOUT=86400

# -----------------------------------------------------------------------------
# External Seminar Collection (외부 세미나 수집)
# -----------------------------------------------------------------------------
# 기본 설정
SEMINAR_COLLECTION_ENABLED=true
SEMINAR_DEFAULT_PLAY_ID=EXT_Desk_D01_Seminar
SEMINAR_KEYWORDS=AI,ML,클라우드,자동화,데이터,금융

# RSS 피드 URL (쉼표로 구분)
SEMINAR_RSS_FEEDS=

# Festa API (festa.io)
FESTA_API_KEY=
FESTA_CATEGORIES=tech,ai,startup

# Eventbrite API (외부 세미나 수집)
# Private Token 발급:
#   1. https://www.eventbrite.com/account-settings/apps 접속
#   2. "API Keys" 탭에서 "Create API Key" 클릭
#   3. 생성된 "Private Token" 복사
EVENTBRITE_API_TOKEN=
EVENTBRITE_WEBHOOK_SECRET=
EVENTBRITE_ORGANIZER_IDS=

# 웹훅 보안
WEBHOOK_RSS_SECRET=
WEBHOOK_API_KEY=
